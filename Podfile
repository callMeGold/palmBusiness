platform:ios,'8.0'
inhibit_all_warnings!
use_frameworks!

def pods
    pod 'SnapKit', '0.18.0'         #自动布局框架(swift)
    pod 'Alamofire', '3.1.4'        #网络请求
    pod 'ObjectMapper', '~> 1.1.5'  #一键json转实体类
    pod 'KVOController', '1.0.3'    #类似通知
    pod 'YYText', '0.9.19'          #UILabel库
    pod 'SVProgressHUD', '1.1.3'    #菊花动画
    pod 'MJRefresh', '3.1.0'        #上下拉刷新
    pod 'KeychainSwift', '~> 3.0.11' #写入硬盘
    pod 'SDWebImage','3.7.5'        #图片缓存
    pod 'IQKeyboardManagerSwift','4.0.0'  #管理键盘
    pod 'UITableView+FDTemplateLayoutCell', '1.4' #自动计算行高
    pod 'RealReachability', '1.1.2' #实时监测网络
    pod 'MarqueeLabel','2.5.2'      #文字跑马灯
    pod 'TextFieldEffects','1.1.1'  #文本框特效
    pod 'SlideMenuControllerOC' #侧滑菜单
    pod "DKChainableAnimationKit", "~> 1.6.0” #动画效果
    pod 'BaiduMapKit' #百度地图SDK
end

target 'palmBusiness' do
